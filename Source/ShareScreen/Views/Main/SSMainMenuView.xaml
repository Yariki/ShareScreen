<UserControl x:Class="SS.ShareScreen.Views.Main.SSMainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SS.ShareScreen.Views.Main"
             xmlns:mvvm="clr-namespace:SS.ShareScreen.Core.MVVM">
  <UserControl.Resources>
    <HierarchicalDataTemplate DataType="mvvm:SSMenuItemViewModel" ItemsSource="{Binding SubItems}">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="16"></ColumnDefinition>
          <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
      <Image Grid.Column="0" Source="{Binding Icon}"></Image>      
      <TextBlock Grid.Column="1" Text="{Binding UIName}"></TextBlock>
      </Grid>
    </HierarchicalDataTemplate> 
  </UserControl.Resources>
    <Menu>
      <MenuItem Header="File" ItemsSource="{Binding  File}"></MenuItem>
      <MenuItem Header="Help" ItemsSource="{Binding  Help}"></MenuItem>
    </Menu>
</UserControl>
